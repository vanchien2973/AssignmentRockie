@model MVC_NET_Core_Assignment_1.DTOs.PersonDto
@{
    ViewData["Title"] = "Oldest Member";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-person-hearts"></i> Oldest Member</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Full Name</th>
                        <th>Gender</th>
                        <th>Date of Birth</th>
                        <th>Age</th>
                        <th>Phone Number</th>
                        <th>Birth Place</th>
                        <th>Graduated</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.FullName</td>
                        <td>
                            @if (Model.Gender == "Male")
                            {
                                <span><i class="bi bi-gender-male"></i> @Model.Gender</span>
                            }
                            else
                            {
                                <span><i class="bi bi-gender-female"></i> @Model.Gender</span>
                            }
                        </td>
                        <td>@Model.DateOfBirth.ToString("dd/MM/yyyy")</td>
                        <td><span>@Model.Age</span></td>
                        <td>@Model.PhoneNumber</td>
                        <td>@Model.BirthPlace</td>
                        <td>
                            @if (Model.IsGraduated)
                            {
                                <span><i class="bi bi-check-circle"></i> Yes</span>
                            }
                            else
                            {
                                <span><i class="bi bi-x-circle"></i> No</span>
                            }
                        </td>
                        <td class="action-buttons">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-info" title="Details">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>