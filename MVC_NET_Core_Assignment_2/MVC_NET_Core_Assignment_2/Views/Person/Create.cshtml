@model MVC_NET_Core_Assignment_1.DTOs.Person.PersonCreateDto

@{
    ViewData["Title"] = "Add New Person";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2>Add New Person</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="FirstName" class="control-label fw-bold">First Name (*)</label>
                            <input asp-for="FirstName" class="form-control"/>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LastName" class="control-label fw-bold">Last Name (*)</label>
                            <input asp-for="LastName" class="form-control"/>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Gender" class="control-label fw-bold">Gender (*)</label>
                            <select asp-for="Gender" class="form-select">
                                <option value="">-- Select Gender --</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DateOfBirth" class="control-label fw-bold">Date of Birth (*)</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control"/>
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="control-label fw-bold">Phone Number (*)</label>
                            <input asp-for="PhoneNumber" class="form-control"/>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="BirthPlace" class="control-label fw-bold">Birth Place (*)</label>
                            <input asp-for="BirthPlace" class="form-control"/>
                            <span asp-validation-for="BirthPlace" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-3 mt-4">
                            <input asp-for="IsGraduated" class="form-check-input"/>
                            <label asp-for="IsGraduated" class="form-check-label fw-bold">Is Graduated?</label>
                        </div>
                    </div>
                </div>
                
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Create
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}